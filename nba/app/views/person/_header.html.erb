<div class=row-fluid>
<div class=well style="overflow:hidden">
<div class=span3>
  <div class=btn-group>
    <%= link_to(
      'General',
      {:action => 'view', :id => @person.id},
      :class => 'btn'
    ) %>
<%- if @person.coach then -%>
    <%= link_to(
      'Coach',
      {:action => 'coach', :id => @person.id},
      :class => 'btn'
    ) %>
<%- end -%>
<%- if @person.player_seasons.count() > 0 then -%>
    <%= link_to(
      'Player',
      {:action => 'player', :id => @person.id},
      :class => 'btn'
    ) %>
<%- end -%>
  </div>
</div>
<div class=span6>
  <h2>
    <%= @person.fullname %>
    <%- if @person.ilkid then -%>
      <small><%= @person.ilkid %></small>
    <%- end -%>
  </h2>
</div>
</div>
</div>
