<div class=row-fluid>
  <div class=span6>
    <h2>Result of query <%= params[:action].upcase %></h2>
    <p>
      List the top 20 career scorers of NBA.
    </p>
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope=col>#</th>
          <th scope=col>First Name</th>
          <th scope=col>Last Name</th>
          <th scope=col>Pts</th>
        </tr>
      </thead>
      <tbody>
        <%- while line = @results.fetch() -%>
          <tr>
            <th scope=row><%= link_to(
              line[0],
              :controller => "person",
              :action => "player",
              :id => line[0]
            ) %></th>
            <td><%= line[1] %></td>
            <td><%= line[2] %></td>
            <td><%= line[3] %></td>
          </tr>
        <%- end -%>
      </tbody>
    </table>
  </div>
  <%= render :partial => "sql" %>
</div>
