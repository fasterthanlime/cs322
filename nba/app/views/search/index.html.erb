<h1>Searching for: <%= params[:q] -%></h1>
<%= form_tag({:controller => :search}, :method => "get") do -%>
  <p>
    <%= label_tag(:q , "Search for:") -%>
    <%= text_field_tag(:q, params[:q]) -%>
    <%= submit_tag("Search") -%>
  </p>
<%- end -%>
<h2>Results</h2>
<table>
  <thead>
    <tr>
      <th scope=col>id</th>
      <th scope=col>table</th>
      <th scope=col>string</th>
    </tr>
  </thead>
  <tbody>
<%- while line = @results.fetch() -%>
    <tr>
      <th scope=row><%= link_to(
        line[1],
        :controller => line[0].singularize,
        :action => :view,
        :id => line[1]
      ) -%></th>
      <td><%= line[0] -%></td>
      <td><%= line[2] -%></td>
    </tr>
<%- end -%>
  </tbody>
</table>
