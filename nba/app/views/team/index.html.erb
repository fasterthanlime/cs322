<div class=row-fluid>
<%- @teams.each do |league,teams| -%>
<div class=span6>
  <h2><%= league %></h2>
  <%- unless teams.nil? then -%>
  <ul>
    <%- teams.each do |team| -%>
    <li><%= link_to(
      "#{team.name} (#{team.trigram})",
      :controller => 'team',
      :action => 'view',
      :id => team.id
    ) -%></li>
    <%- end -%>
  </ul>
  <%- else -%>
  <p>no teams</p>
  <%- end -%>
</div>
<%- end -%>
</div>
