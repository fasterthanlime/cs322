<div class=row-fluid>
  <div class=span12>
    <h2><%= @team.name -%> <small><%= @team.trigram -%></small></h2>
    <p>Playing in <%= @team.league.name %></p>
  </div>
</div>

<div class=row-fluid>
<div class=span4>
  <p>
    <img src="http://<%= @team.city.gsub(/\s/, '-') %>-<%= @team.name.gsub(/\s/, '-') %>.jpg.to/" alt="">
  </p>
</div>
<div class=span8>
  <h3>Coach Stat</h3>
  <table class="table table-striped">
    <thead>
      <tr>
        <th colspan=2></th>
        <th scope=colgroup colspan=2>Regular</th>
        <th scope=colgroup colspan=2>Playoff</th>
      </tr>
      <tr>
        <th scope=col>Year</th>
        <th scope=col>Coach</th>
        <th scope=col>Win</th>
        <th scope=col>Loss</th>
        <th scope=col>Win</th>
        <th scope=col>Loss</th>
      </tr>
    </thead>
    <tbody>
<%- year = nil -%>
<%- @team.coach_seasons.each do |season| -%>
      <tr>
        <th scope=row><%= season.year if year != season.year %></th>
        <td><%= link_to(
          season.person.fullname,
          :controller => 'person',
          :action => 'coach',
          :id => season.person_id
        ) %></td>
        <td><%= season.season_win -%></td>
        <td><%= season.season_loss -%></td>
        <td><%= season.playoff_win -%></td>
        <td><%= season.playoff_loss -%></td>
      </tr>
    <%- year = season.year -%>
<%- end -%>
    </tbody>
  </table>
</div>
</div>

<div class=row-fluid>
<div class=span12>
  <h3>Team Stat</h3>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope=col>Year</th>
        <th scope=col>Type</th>
        <th scope=col>Pts</th>
        <th scope=col><abbr title="Assists">Ast</abbr></th>
        <th scope=col><abbr title="Steals">Stl</abbr></th>
        <th scope=col><abbr title="Blocks">Blk</abbr></th>
        <th scope=col><abbr title="Rebounds">Reb</abbr></th>
        <th scope=col>OReb</th>
        <th scope=col>DReb</th>
        <th scope=col>PF</th>
        <th scope=col>FGA</th>
        <th scope=col>FGM</th>
        <th scope=col>FTA</th>
        <th scope=col>FTM</th>
        <th scope=col>3PA</th>
        <th scope=col>3PM</th>
        <th scope=col>Pace</th>
      </tr>
    </thead>
    <tbody>
<%- @team.team_seasons.each do |stat| -%>
      <tr>
        <th scope=row rowspan=2><%= stat.year -%></th>
        <td><abbr title="Offensive">O</abbr></td>
        <td><%= stat.opts %></td>
        <td><%= stat.oasts %></td>
        <td><%= stat.osteals %></td>
        <td><%= stat.oblocks %></td>
        <td><%= stat.oreb %></td>
        <td><%= stat.ooreb %></td>
        <td><%= stat.odreb %></td>
        <td><%= stat.opf %></td>
        <td><%= stat.ofga %></td>
        <td><%= stat.ofgm %></td>
        <td><%= stat.ofta %></td>
        <td><%= stat.oftm %></td>
        <td><%= stat.otpa %></td>
        <td><%= stat.otpm %></td>
        <td><%= stat.pace.round(2) -%></td>
      </tr>
      <tr>
        <td><abbr title="Defensive">D</abbr></td>
        <td><%= stat.dpts %></td>
        <td><%= stat.dasts %></td>
        <td><%= stat.dsteals %></td>
        <td><%= stat.dblocks %></td>
        <td><%= stat.dreb %></td>
        <td><%= stat.doreb %></td>
        <td><%= stat.ddreb %></td>
        <td><%= stat.dpf %></td>
        <td><%= stat.dfga %></td>
        <td><%= stat.dfgm %></td>
        <td><%= stat.dfta %></td>
        <td><%= stat.dftm %></td>
        <td><%= stat.dtpa %></td>
        <td><%= stat.dtpm %></td>
        <td></td>
      </tr>
<%- end -%>
    </tbody>
  </table>
</div>
</div>
