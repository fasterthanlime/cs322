<div class=row-fluid>
  <div class=span3>
    <ul>
      <li><%= link_to(
        "Teams (#{@teams_count})",
        :controller => "team"
      ) %></li>
      <li><%= link_to(
        "People (#{@people_count})",
        :controller => "person"
      ) %></li>
    </ul>
  </div>
  <div class=span6>
    <%= form_tag({:controller => :search}, :method => "get", :class => "form-search well") do -%>
      <p>
        <%= label_tag(:q , "Search for:") -%>
        <%= text_field_tag(:q, "", :class => "input-medium search-query") -%>
        <%= submit_tag("Search") -%>
      </p>
    <%- end -%>
  </div>
</div>
